{
  "format_version": "1.17.0",
  "minecraft:block": {
    "description": {
      "identifier": "bg:wraith_node",
      "properties": {
        "block:rotation": [
          0,
          1,
          2,
          3,
          4,
          5,
          6
        ]
      }
    },
    "components": {
      "minecraft:creative_category":{
      "category": "Construction",
      "group": "itemGroup.name.Construction"
      },
      "minecraft:destroy_time": 2.0,
      "minecraft:friction": 0.6,
      "minecraft:map_color": "#FFFFFF",
      "minecraft:explosion_resistance": 1.0,
      "minecraft:block_light_absorption": 0.0,
      "minecraft:block_light_emission": 0.5,
      "minecraft:on_player_placing": {
        "event": "update_rotation"
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "wraith_node",
          "render_method": "blend"
        }
      },
			   "minecraft:geometry": "geometry.wraith_node",
      "minecraft:pick_collision": {
        "origin": [
          -8.0,
          0,
          -8.0
        ],
        "size": [
          12,
          12,
          12
        ]
      },
      "minecraft:entity_collision": {
        "origin": [
          -8.0,
          0,
          -8.0
        ],
        "size": [
          12,
          12,
          12
        ]
      },
      "minecraft:ticking": {
        "looping": true,
        "range": [
          0.1,
          0.1
        ],
        "on_tick": {
          "event": "on_tick",
          "target": "self"
        }
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('block:rotation') == 2",
        "components": {
          "minecraft:rotation": [
            0,
            -180,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('block:rotation') == 3",
        "components": {
          "minecraft:rotation": [
            0,
            0,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('block:rotation') == 4",
        "components": {
          "minecraft:rotation": [
            0,
            -90,
            0
          ]
        }
      },
      {
        "condition": "query.block_property('block:rotation') == 5",
        "components": {
          "minecraft:rotation": [
            0,
            90,
            0
          ]
        }
      }
    ],
    "events": {
      "update_rotation": {
        "set_block_property": {
          "block:rotation": "query.cardinal_facing_2d"
        }
      },
      "on_tick": {
        "run_command": {
          "command": [
           "execute unless entity @e[type=bg:wraith_node_entity, r=1] run summon bg:wraith_node_entity ~~~"
          ]
        }
      }
    }
  }
}
